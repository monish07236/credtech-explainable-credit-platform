{
  "name": "credtech-api-server",
  "version": "1.0.0",
  "description": "Backend API server for Corporate Credit Intelligence Platform - Real-time credit risk assessment with ML-powered analytics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "build": "echo 'No build process needed for Node.js API'",
    "deploy": "pm2 start ecosystem.config.js --env production",
    "logs": "pm2 logs credtech-api",
    "monitor": "pm2 monit",
    "docker:build": "docker build -t credtech-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env credtech-api",
    "heroku-postbuild": "echo 'Heroku deployment successful'"
  },
  "keywords": [
    "fintech",
    "credit-risk",
    "api",
    "real-time",
    "machine-learning",
    "financial-analytics",
    "corporate-credit",
    "risk-assessment",
    "hackathon",
    "express",
    "nodejs"
  ],
  "author": {
    "name": "Monish Kumar",
    "email": "monish@credtech.ai",
    "url": "https://github.com/monish07236"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/monish07236/credtech-explainable-credit-platform.git"
  },
  "bugs": {
    "url": "https://github.com/monish07236/credtech-explainable-credit-platform/issues"
  },
  "homepage": "https://monish07236.github.io/credtech-explainable-credit-platform/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.9.2",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "nodemailer": "^6.9.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "coverage/*",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
    